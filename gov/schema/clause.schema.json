{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Clause Specification",
  "description": "JSON schema for clause definition files",
  "type": "object",
  "required": ["clause_id", "title", "kind", "text"],
  "properties": {
    "clause_id": {
      "type": "string",
      "pattern": "^C-[A-Z0-9-]+$",
      "description": "Unique clause identifier (e.g., C-PHASE-ORDER)"
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "description": "Human-readable clause title"
    },
    "kind": {
      "type": "string",
      "enum": ["normative", "informative"],
      "description": "Clause type: normative (requirement) or informative (context)"
    },
    "status": {
      "type": "string",
      "enum": ["active", "superseded", "deprecated"],
      "default": "active",
      "description": "Clause lifecycle status"
    },
    "text": {
      "type": "string",
      "minLength": 1,
      "description": "Clause content (Markdown)"
    },
    "since": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "RFC version when this clause was introduced"
    },
    "superseded_by": {
      "type": "string",
      "pattern": "^C-[A-Z0-9-]+$",
      "description": "Clause ID that supersedes this one"
    },
    "anchors": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Cross-reference anchors for linking"
    }
  },
  "additionalProperties": false
}
